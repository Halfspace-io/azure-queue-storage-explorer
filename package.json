{
  "name": "azure-queue-storage-explorer",
  "displayName": "Azure Queue Storage Explorer",
  "description": "A VS Code extension for managing Azure Queue Storage with local Azurite emulator. Create queues, add/remove messages, and manage your local development queues with an intuitive interface.",
  "version": "0.0.11",
  "publisher": "halfspace",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/halfspace/azure-queue-storage-explorer.git"
  },
  "engines": {
    "vscode": "^1.98.2"
  },
  "categories": [
    "Azure",
    "Other"
  ],
  "keywords": [
    "azure",
    "queue",
    "storage",
    "azurite",
    "emulator",
    "local",
    "development",
    "messages",
    "cloud"
  ],
  "galleryBanner": {
    "color": "#0078d4",
    "theme": "dark"
  },
  "preview": true,
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "azure-queue-storage-explorer.createQueue",
        "title": "Queue: Create Queue",
        "icon": "$(add)"
      },
      {
        "command": "azure-queue-storage-explorer.listMessages",
        "title": "Queue: List Messages"
      },
      {
        "command": "azure-queue-storage-explorer.addMessage",
        "title": "Queue: Add Message",
        "icon": "$(add)"
      },
      {
        "command": "azure-queue-storage-explorer.selectQueue",
        "title": "Select Queue"
      },
      {
        "command": "azure-queue-storage-explorer.addMessageToQueue",
        "title": "Add Message",
        "icon": "$(add)"
      },
      {
        "command": "azure-queue-storage-explorer.clearMessagesToQueue",
        "title": "Clear Messages",
        "icon": "$(clear-all)"
      },
      {
        "command": "azure-queue-storage-explorer.removeQueueToQueue",
        "title": "Remove Queue",
        "icon": "$(trash)"
      },
      {
        "command": "azure-queue-storage-explorer.clearMessages",
        "title": "Queue: Clear Messages"
      },
      {
        "command": "azure-queue-storage-explorer.removeQueue",
        "title": "Queue: Remove Queue"
      },
      {
        "command": "azure-queue-storage-explorer.removeMessage",
        "title": "Queue: Remove Message"
      },
      {
        "command": "azure-queue-storage-explorer.removeMessageToMessage",
        "title": "Remove Message",
        "icon": "$(trash)"
      },
      {
        "command": "azure-queue-storage-explorer.refreshQueues",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "views": {
      "azure-queue-storage-explorer": [
        {
          "id": "azure-queue-storage-explorer.queues",
          "name": "Azure Queues",
          "when": "true",
          "icon": "$(mail)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "azure-queue-storage-explorer.createQueue",
          "when": "view == azure-queue-storage-explorer.queues",
          "group": "navigation"
        },
        {
          "command": "azure-queue-storage-explorer.refreshQueues",
          "when": "view == azure-queue-storage-explorer.queues",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "azure-queue-storage-explorer.addMessageToQueue",
          "when": "view == azure-queue-storage-explorer.queues && viewItem == queue",
          "group": "inline"
        },
        {
          "command": "azure-queue-storage-explorer.clearMessagesToQueue",
          "when": "view == azure-queue-storage-explorer.queues && viewItem == queue",
          "group": "inline"
        },
        {
          "command": "azure-queue-storage-explorer.removeQueueToQueue",
          "when": "view == azure-queue-storage-explorer.queues && viewItem == queue",
          "group": "inline"
        },
        {
          "command": "azure-queue-storage-explorer.removeMessageToMessage",
          "when": "view == azure-queue-storage-explorer.queues && viewItem == message",
          "group": "inline"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "azure-queue-storage-explorer",
          "title": "Local Azure Queues",
          "icon": "$(mail)"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "dependencies": {
    "@azure/storage-queue": "^12.19.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.23.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "mocha": {
    "ui": "tdd",
    "timeout": 10000,
    "require": ["./out/test/globalSetup.js"]
  }
}
